<!-- Te doy solo el bloque Body actualizado, ya que el resto no cambia -->
<Body>
  <ReportItems>

    <!-- CABECERA -->
    <Textbox Name="TituloFactura">
      <CanGrow>true</CanGrow>
      <Paragraphs>
        <Paragraph>
          <TextRuns>
            <TextRun>
              <Value>FacturaPro - Gimnasio Natura Sport</Value>
              <Style>
                <FontSize>18pt</FontSize>
                <FontWeight>Bold</FontWeight>
                <FontFamily>Segoe UI Semibold</FontFamily>
                <Color>SteelBlue</Color>
              </Style>
            </TextRun>
          </TextRuns>
        </Paragraph>
      </Paragraphs>
      <Top>0.2in</Top>
      <Left>0in</Left>
      <Height>0.4in</Height>
      <Width>7in</Width>
      <Style>
        <TextAlign>Center</TextAlign>
        <Border><Style>None</Style></Border>
      </Style>
    </Textbox>

    <!-- INFORMACIÓN CLIENTE -->
    <Textbox Name="CabeceraDatos">
      <CanGrow>true</CanGrow>
      <Paragraphs>
        <Paragraph>
          <TextRuns>
            <TextRun>
              <Value>Nº Factura: __________&#xA;Fecha: ____________&#xA;Cliente: ________________</Value>
              <Style>
                <FontFamily>Segoe UI</FontFamily>
                <FontSize>10pt</FontSize>
                <Color>DarkSlateGray</Color>
              </Style>
            </TextRun>
          </TextRuns>
        </Paragraph>
      </Paragraphs>
      <Top>0.7in</Top>
      <Left>0.2in</Left>
      <Height>0.9in</Height>
      <Width>3.5in</Width>
      <Style>
        <Border><Style>Solid</Style><Color>Gainsboro</Color></Border>
        <PaddingLeft>4pt</PaddingLeft>
        <PaddingTop>2pt</PaddingTop>
      </Style>
    </Textbox>

    <!-- PIE DE TABLA -->
    <Textbox Name="TotalesPlaceholder">
      <CanGrow>true</CanGrow>
      <Paragraphs>
        <Paragraph>
          <TextRuns>
            <TextRun>
              <Value>Subtotal: ________&#xA;IVA: ________&#xA;TOTAL: ________</Value>
              <Style>
                <FontWeight>Bold</FontWeight>
                <FontSize>10pt</FontSize>
                <Color>MidnightBlue</Color>
              </Style>
            </TextRun>
          </TextRuns>
        </Paragraph>
      </Paragraphs>
      <Top>3in</Top>
      <Left>5.2in</Left>
      <Height>0.8in</Height>
      <Width>2in</Width>
      <Style>
        <TextAlign>Right</TextAlign>
        <Border><Style>Solid</Style><Color>LightGray</Color></Border>
        <BackgroundColor>WhiteSmoke</BackgroundColor>
        <PaddingRight>5pt</PaddingRight>
        <PaddingTop>3pt</PaddingTop>
      </Style>
    </Textbox>

    <!-- PIE -->
    <Textbox Name="Pie">
      <CanGrow>true</CanGrow>
      <Paragraphs>
        <Paragraph>
          <TextRuns>
            <TextRun>
              <Value>Gracias por confiar en nosotros</Value>
              <Style>
                <FontStyle>Italic</FontStyle>
                <FontSize>9pt</FontSize>
                <FontFamily>Segoe UI Light</FontFamily>
                <Color>Gray</Color>
              </Style>
            </TextRun>
          </TextRuns>
        </Paragraph>
      </Paragraphs>
      <Top>4in</Top>
      <Left>0in</Left>
      <Height>0.3in</Height>
      <Width>7.5in</Width>
      <Style>
        <TextAlign>Center</TextAlign>
        <Border><Style>TopSolid</Style><Color>LightGray</Color></Border>
      </Style>
    </Textbox>

  </ReportItems>
  <Height>4.5in</Height>
</Body>
